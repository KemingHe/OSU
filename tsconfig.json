{
  "compilerOptions": {
    "moduleResolution": "Node10",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@types/*": ["types/*"],
      "@scripts/*": ["scripts/*"]
    },
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/types",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["scripts", "src", "types"]
}
