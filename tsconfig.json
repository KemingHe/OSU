{
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@types/*": ["types/*"],
      "@scripts/*": ["scripts/*"]
    },
    "noEmit": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["scripts", "src", "types"]
}
