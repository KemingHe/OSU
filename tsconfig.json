{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@data/*": ["src/data/*"],
      "@utils/*": ["src/utils/*"],
    },
    "strict": true,
    "noEmit": false,
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src"],
  "exclude": [
    ".git",
    ".github",
    ".husky",
    ".vscode",
    "coverage",
    "dist",
    "docs",
    "node_modules",
  ],
}
